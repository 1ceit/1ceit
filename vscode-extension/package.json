{
    "name": "vscode-now-coding",
    "author": "CJ Artz",
    "license": "GPL-3.0-or-later",
    "displayName": "Now Coding",
    "description": "Live status for GitHub README",
    "publisher": "1ceit",
    "icon": "icon.png",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/1ceit/1ceit.git"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "now-coding.options",
                "title": "Now Coding: Options"
            },
            {
                "command": "now-coding.toggle",
                "title": "Now Coding: Toggle Tracking"
            },
            {
                "command": "now-coding.settings",
                "title": "Now Coding: Open Settings"
            }
        ],
        "configuration": {
            "title": "Now Coding",
            "properties": {
                "nowCoding.apiUrl": {
                    "type": "string",
                    "default": "https://github.api.1ceit.com/api/vscode-status",
                    "description": "The URL of your Vercel API endpoint for VS Code Status"
                },
                "nowCoding.apiSecret": {
                    "type": "string",
                    "default": "",
                    "description": "The secret token for your Vercel API endpoint"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "simple-git": "^3.31.1"
    }
}